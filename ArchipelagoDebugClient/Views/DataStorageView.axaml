<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArchipelagoDebugClient.Views.DataStorageView">
    <Grid RowDefinitions="*, Auto">
        <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Visible">
            <TreeDataGrid CanUserResizeColumns="True" CanUserSortColumns="False" Source="{Binding HierarchySource}"/>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Margin="10">Key to watch. Use /datastore on the server to list available keys.</Label>
            <TextBox Margin="5" Name="KeyField" Width="300"/>
            <Button Margin="5" Click="OnWatchClicked">Watch Key</Button>
        </StackPanel>
    </Grid>
</UserControl>
