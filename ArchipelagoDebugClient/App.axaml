<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dha="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:res="clr-namespace:ArchipelagoDebugClient.Resources"
             x:Class="ArchipelagoDebugClient.App">

    <Application.Styles>
        <FluentTheme />
        <dha:DialogHostStyles />
        <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
        <StyleInclude Source="avares://ArchipelagoDebugClient/Styles/IconButtons.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <res:ThemedPaletteDictionary/>
                <MergeResourceInclude Source="avares://ArchipelagoDebugClient/Resources/Resources.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
